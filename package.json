{
	"name": "@alexaegis/workspace",
	"description": "base repo for common stuff in my other js projects",
	"version": "0.0.1",
	"license": "mit",
	"private": true,
	"author": {
		"email": "alexaegis@gmail.com",
		"name": "Alex Aegis",
		"url": "https://github.com/AlexAegis"
	},
	"homepage": "https://github.com/AlexAegis/js-tooling",
	"repository": {
		"type": "git",
		"url": "https://github.com/AlexAegis/js-tooling"
	},
	"bugs": {
		"email": "alexaegis@gmail.com",
		"url": "https://github.com/AlexAegis/js-tooling/issues"
	},
	"keywords": [
		"eslint",
		"javascript",
		"js",
		"ts",
		"tsconfig",
		"turbo",
		"typescript"
	],
	"type": "module",
	"config": {
		"engine-strict": true
	},
	"engines": {
		"node": ">=18.13.0"
	},
	"packageManager": "pnpm@7.28.0",
	"workspaces": [
		"apps/*",
		"libs/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build_",
		"lint": "pnpm lint:tsc && pnpm lint:es && pnpm lint:svelte && pnpm lint:style && pnpm lint:format && pnpm lint:format_ && pnpm lint:md && pnpm lint:md_",
		"lint:es": "turbo run lint:es_ --concurrency 6",
		"lint:es_:chain": "turbo run build_ --concurrency 6 --filter @alexaegis/eslint-config-core",
		"lint:format": "turbo run lint:format_ --concurrency 6",
		"lint:format_": "prettier --check *.{json,ts,js,mjs,md,yml,yaml}",
		"lint:md": "turbo run lint:md_ --concurrency 6",
		"lint:md_": "remark --frail --no-stdout *.md docs/**/*.md",
		"lint:style": "turbo run lint:style_ --concurrency 6",
		"lint:svelte": "turbo run lint:svelte_ --concurrency 6",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6",
		"ci": "pnpm lint && pnpm build && pnpm test && pnpm typedoc",
		"format": "prettier --write .",
		"ncu": "ncu --deep --peer --upgrade",
		"nuke": "nuke",
		"postinstall": "husky install",
		"start": "turbo run start_ --parallel",
		"test": "turbo run test_ --concurrency 6 && merge-workspace-lcov-reports && lcov-viewer lcov -o ./coverage ./coverage/lcov.info",
		"typedoc": "turbo run typedoc_"
	},
	"devDependencies": {
		"@alexaegis/eslint-config-core": "*",
		"@alexaegis/setup-editorconfig": "*",
		"@alexaegis/setup-eslint": "*",
		"@alexaegis/setup-git": "*",
		"@alexaegis/setup-husky": "*",
		"@alexaegis/setup-prettier": "*",
		"@alexaegis/setup-remark": "*",
		"@alexaegis/setup-ts": "*",
		"@alexaegis/setup-turbo": "*",
		"@alexaegis/setup-vite": "*",
		"@alexaegis/setup-vitest": "*",
		"@alexaegis/ts": "*",
		"@types/eslint": "^8.21.1",
		"@types/node": "^18.14.1",
		"npm-check-updates": "^16.7.9",
		"prettier-plugin-svelte": "^2.9.0",
		"svelte": "^3.55.1",
		"prettier": "^2.8.4",
		"remark": "^14.0.2",
		"remark-lint": "^9.1.1",
		"vitest": "^0.29.1"
	}
}
