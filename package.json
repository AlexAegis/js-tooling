{
	"name": "@alexaegis/workspace",
	"description": "base repo for common stuff in my other js projects",
	"version": "0.1.8",
	"license": "mit",
	"private": true,
	"author": {
		"email": "alexaegis@gmail.com",
		"name": "Alex Aegis",
		"url": "https://github.com/AlexAegis"
	},
	"homepage": "https://github.com/AlexAegis/js-tooling",
	"repository": {
		"type": "git",
		"url": "https://github.com/AlexAegis/js-tooling"
	},
	"bugs": {
		"email": "alexaegis@gmail.com",
		"url": "https://github.com/AlexAegis/js-tooling/issues"
	},
	"keywords": [
		"eslint",
		"javascript",
		"js",
		"ts",
		"tsconfig",
		"turbo",
		"typescript"
	],
	"type": "module",
	"config": {
		"engine-strict": true
	},
	"engines": {
		"node": ">=18.13.0"
	},
	"packageManager": "pnpm@8.2.0",
	"workspaces": [
		"apps/*",
		"libs/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build-lib_ build-app_ --concurrency 6 --cache-dir .cache/turbo",
		"build-lib": "turbo run build-lib_ --concurrency 6 --cache-dir .cache/turbo",
		"lint": "turbo run lint_ --concurrency 6 --cache-dir .cache/turbo",
		"lint:depcheck": "turbo run lint:depcheck_ --concurrency 6 --cache-dir .cache/turbo",
		"lint:depcheck_": "depcheck",
		"lint:es": "turbo run lint:es_ --concurrency 6 --cache-dir .cache/turbo",
		"lint:format": "turbo run lint:format_ --concurrency 6 --cache-dir .cache/turbo",
		"lint:format_": "prettier --check *.{json,ts,js,mjs,md,yml,yaml}",
		"lint:md": "turbo run lint:md_ --concurrency 6 --cache-dir .cache/turbo",
		"lint:md_": "remark --frail --no-stdout --silently-ignore *.md docs/**/*.md",
		"lint:style": "turbo run lint:style_ --concurrency 6 --cache-dir .cache/turbo",
		"lint:style:css": "turbo run lint:style:css_ --concurrency 6 --cache-dir .cache/turbo",
		"lint:style:scss": "turbo run lint:style:scss_ --concurrency 6 --cache-dir .cache/turbo",
		"lint:svelte": "turbo run lint:svelte_ --concurrency 6 --cache-dir .cache/turbo",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6 --cache-dir .cache/turbo",
		"ce": "turbo run ce_ --concurrency 6 --cache-dir .cache/turbo",
		"format": "prettier --write .",
		"merge-coverage": "merge-workspace-lcov-reports && lcov-viewer lcov -o ./coverage ./coverage/lcov.info",
		"ncu": "ncu --deep --peer --upgrade && pnpm up",
		"nuke": "nuke",
		"postinstall": "husky install && turbo run build-lib_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/eslint-config-core --filter @alexaegis/setup-remark",
		"release": "commit-and-tag-version --sign --commit-all",
		"release:major": "commit-and-tag-version --sign --commit-all --release-as major",
		"release:minor": "commit-and-tag-version --sign --commit-all --release-as minor",
		"release:patch": "commit-and-tag-version --sign --commit-all --release-as patch",
		"setup-all": "setup-prettier && setup-editorconfig && setup-husky && setup-git && setup-commitlint && setup-eslint && setup-github && setup-ts && setup-remark && setup-standard-version && setup-stylelint && setup-depcheck && setup-turbo && setup-vite && setup-vitest && setup-workspace",
		"start": "turbo run start_ --parallel --cache-dir .cache/turbo",
		"test": "turbo run test_ --concurrency 6 --cache-dir .cache/turbo",
		"typedoc": "turbo run typedoc_ --concurrency 6 --cache-dir .cache/turbo",
		"typedoc_": "typedoc"
	},
	"devDependencies": {
		"@alexaegis/coverage-tools": "^0.1.3",
		"@alexaegis/eslint-config-core": "workspace:^0.1.8",
		"@alexaegis/nuke": "workspace:^0.1.8",
		"@alexaegis/setup-commitlint": "workspace:^0.1.8",
		"@alexaegis/setup-depcheck": "workspace:^0.1.8",
		"@alexaegis/setup-editorconfig": "workspace:^0.1.8",
		"@alexaegis/setup-eslint": "workspace:^0.1.8",
		"@alexaegis/setup-git": "workspace:^0.1.8",
		"@alexaegis/setup-github": "workspace:^0.1.8",
		"@alexaegis/setup-husky": "workspace:^0.1.8",
		"@alexaegis/setup-prettier": "workspace:^0.1.8",
		"@alexaegis/setup-remark": "workspace:^0.1.8",
		"@alexaegis/setup-standard-version": "workspace:^0.1.8",
		"@alexaegis/setup-stylelint": "workspace:^0.1.8",
		"@alexaegis/setup-ts": "workspace:^0.1.8",
		"@alexaegis/setup-turbo": "workspace:^0.1.8",
		"@alexaegis/setup-vite": "workspace:^0.1.8",
		"@alexaegis/setup-vitest": "workspace:^0.1.8",
		"@alexaegis/setup-vscode": "workspace:^0.1.8",
		"@alexaegis/setup-workspace": "workspace:^0.1.8",
		"@alexaegis/stylelint-config": "workspace:^0.1.8",
		"@alexaegis/ts": "workspace:^0.1.8",
		"@lcov-viewer/cli": "^1.3.0",
		"@types/eslint": "^8.37.0",
		"@types/node": "^18.15.11",
		"@vitest/coverage-c8": "^0.30.1",
		"commit-and-tag-version": "^11.2.1",
		"commitlint": "^17.6.1",
		"depcheck": "^1.4.3",
		"eslint": "^8.38.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.1",
		"npm-check-updates": "^16.10.8",
		"postcss-scss": "^4.0.6",
		"prettier": "^2.8.7",
		"remark": "^14.0.2",
		"remark-cli": "^11.0.0",
		"stylelint": "15.4.0",
		"svelte": "^3.58.0",
		"svelte-check": "^3.2.0",
		"ts-node": "^10.9.1",
		"turbo": "^1.9.1",
		"typedoc": "^0.24.1",
		"typescript": "^5.0.4",
		"vitest": "^0.30.1"
	}
}
