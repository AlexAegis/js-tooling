{
	"name": "@alexaegis/workspace",
	"description": "base repo for common stuff in my other js projects",
	"version": "0.0.1",
	"license": "mit",
	"private": true,
	"author": {
		"email": "alexaegis@gmail.com",
		"name": "Alex Aegis",
		"url": "https://github.com/AlexAegis"
	},
	"homepage": "https://github.com/AlexAegis/js",
	"repository": {
		"type": "git",
		"url": "https://github.com/AlexAegis/js"
	},
	"bugs": {
		"email": "alexaegis@gmail.com",
		"url": "https://github.com/AlexAegis/js/issues"
	},
	"keywords": [
		"eslint",
		"javascript",
		"js",
		"ts",
		"tsconfig",
		"turbo",
		"typescript"
	],
	"type": "module",
	"config": {
		"engine-strict": true
	},
	"engines": {
		"node": ">=18.13.0"
	},
	"packageManager": "pnpm@7.26.3",
	"workspaces": [
		"apps/*",
		"libs/*",
		"packages/*"
	],
	"scripts": {
		"ci": "pnpm lint && pnpm build && pnpm test && pnpm typedoc",
		"build": "turbo run build_",
		"lint": "pnpm lint:tsc && pnpm lint:es && pnpm lint:svelte && pnpm lint:style && pnpm lint:format && pnpm lint:format:workspace && pnpm lint:md && pnpm lint:md:workspace && pnpm lint:rmd && pnpm lint:rmd:workspace",
		"lint:es": "turbo run lint:es_ --concurrency 6",
		"lint:format": "turbo run lint:format_ --concurrency 6",
		"lint:format_": "prettier --check *.{json,ts,js,mjs,md,yml,yaml}",
		"lint:md": "turbo run lint:md_ --concurrency 6",
		"lint:md_": "markdownlint --ignore-path '.gitignore' --ignore CHANGELOG.md *.md",
		"lint:rmd": "turbo run lint:rmd_ --concurrency 6",
		"lint:rmd_": "remark --frail --quiet --no-stdout *.md",
		"lint:style": "turbo run lint:style_ --concurrency 6",
		"lint:svelte": "turbo run lint:svelte_ --concurrency 6",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6",
		"format": "prettier --write .",
		"ncu": "ncu --deep --peer --upgrade",
		"nuke": "nuke",
		"postinstall": "husky install",
		"start": "turbo run start --parallel",
		"test": "turbo run test"
	},
	"dependencies": {
		"@alexaegis/common": "*"
	},
	"devDependencies": {
		"@alexaegis/eslint-config-core": "*",
		"@alexaegis/setup-husky": "*",
		"@alexaegis/setup-md": "*",
		"@alexaegis/setup-prettier": "*",
		"@alexaegis/setup-ts": "*",
		"@alexaegis/setup-turbo": "*",
		"@alexaegis/ts": "*",
		"@types/node": "^18.11.19",
		"npm-check-updates": "^16.6.3"
	}
}
