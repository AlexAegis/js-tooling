{
	"name": "@alexaegis/workspace",
	"description": "base repo for common stuff in my other js projects",
	"version": "0.2.0",
	"license": "mit",
	"private": true,
	"keywords": [
		"eslint",
		"javascript",
		"js",
		"managed-by-autotool",
		"ts",
		"tsconfig",
		"turbo",
		"typescript"
	],
	"author": {
		"email": "alexaegis@gmail.com",
		"name": "Alex Aegis",
		"url": "https://github.com/AlexAegis"
	},
	"homepage": "https://github.com/AlexAegis/js-tooling",
	"repository": {
		"type": "git",
		"url": "https://github.com/AlexAegis/js-tooling"
	},
	"bugs": {
		"email": "alexaegis@gmail.com",
		"url": "https://github.com/AlexAegis/js-tooling/issues"
	},
	"type": "module",
	"config": {
		"engine-strict": true
	},
	"engines": {
		"node": ">=18.13.0"
	},
	"packageManager": "pnpm@8.5.1",
	"workspaces": [
		"apps/*",
		"libs/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build-lib_ build-app_ --concurrency 16 --cache-dir .cache/turbo",
		"build-lib": "turbo run build-lib_ --concurrency 16 --cache-dir .cache/turbo",
		"lint": "turbo run lint_ --concurrency 16 --cache-dir .cache/turbo",
		"lint:depcheck": "turbo run lint:depcheck_ --concurrency 16 --cache-dir .cache/turbo",
		"lint:depcheck_": "depcheck",
		"lint:es": "turbo run lint:es_ --concurrency 16 --cache-dir .cache/turbo",
		"lint:format": "turbo run lint:format_ --concurrency 16 --cache-dir .cache/turbo",
		"lint:format_": "prettier --check *.*",
		"lint:md": "turbo run lint:md_ --concurrency 16 --cache-dir .cache/turbo",
		"lint:md_": "remark --frail --no-stdout --silently-ignore *.md docs/**/*.md",
		"lint:style": "turbo run lint:style_ --concurrency 16 --cache-dir .cache/turbo",
		"lint:style:css": "turbo run lint:style:css_ --concurrency 16 --cache-dir .cache/turbo",
		"lint:style:html": "turbo run lint:style:html_ --concurrency 16 --cache-dir .cache/turbo",
		"lint:style:scss": "turbo run lint:style:scss_ --concurrency 16 --cache-dir .cache/turbo",
		"lint:svelte": "turbo run lint:svelte_ --concurrency 16 --cache-dir .cache/turbo",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 16 --cache-dir .cache/turbo",
		"publint": "turbo run publint_ --concurrency 16 --cache-dir .cache/turbo",
		"ce": "turbo run ce_ --concurrency 16 --cache-dir .cache/turbo",
		"format": "prettier --write .",
		"merge-coverage": "merge-workspace-lcov-reports && lcov-viewer lcov -o ./coverage ./coverage/lcov.info",
		"ncu": "ncu --deep --peer --upgrade && pnpm up",
		"nuke": "nuke",
		"postinstall": "husky install && turbo run build-lib_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/eslint-config-core --filter @alexaegis/autotool-plugin-remark",
		"release": "commit-and-tag-version --sign --commit-all",
		"release:major": "commit-and-tag-version --sign --commit-all --release-as major",
		"release:minor": "commit-and-tag-version --sign --commit-all --release-as minor",
		"release:patch": "commit-and-tag-version --sign --commit-all --release-as patch",
		"setup-all": "autotool-plugin-standard-version && setup-stylelint && setup-turbo && setup-vite && setup-svelte && setup-vitest && setup-workspace",
		"start": "turbo run start_ --parallel --cache-dir .cache/turbo",
		"test": "turbo run test_ --concurrency 16 --cache-dir .cache/turbo",
		"typedoc": "turbo run typedoc_ --concurrency 16 --cache-dir .cache/turbo",
		"typedoc_": "typedoc"
	},
	"devDependencies": {
		"@alexaegis/autotool-plugin-commitlint": "workspace:^",
		"@alexaegis/autotool-plugin-depcheck": "workspace:^",
		"@alexaegis/autotool-plugin-editorconfig": "workspace:^",
		"@alexaegis/autotool-plugin-eslint": "workspace:^",
		"@alexaegis/autotool-plugin-git": "workspace:^",
		"@alexaegis/autotool-plugin-github": "workspace:^",
		"@alexaegis/autotool-plugin-husky": "workspace:^",
		"@alexaegis/autotool-plugin-prettier": "workspace:^",
		"@alexaegis/autotool-plugin-publint": "workspace:^",
		"@alexaegis/autotool-plugin-remark": "workspace:^",
		"@alexaegis/autotool-plugin-standard-version": "workspace:^",
		"@alexaegis/autotool-plugin-ts": "workspace:^",
		"@alexaegis/coverage-tools": "^0.1.8",
		"@alexaegis/eslint-config-core": "workspace:^",
		"@alexaegis/nuke": "workspace:^",
		"@alexaegis/setup-stylelint": "workspace:^",
		"@alexaegis/setup-svelte": "workspace:^",
		"@alexaegis/setup-turbo": "workspace:^",
		"@alexaegis/setup-vite": "workspace:^",
		"@alexaegis/setup-vitest": "workspace:^",
		"@alexaegis/setup-vscode": "workspace:^",
		"@alexaegis/setup-workspace": "workspace:^",
		"@alexaegis/stylelint-config": "workspace:^",
		"@alexaegis/ts": "workspace:^",
		"@lcov-viewer/cli": "^1.3.0",
		"@types/eslint": "^8.37.0",
		"@types/node": "^20.2.1",
		"@vitest/coverage-c8": "^0.31.1",
		"autotool": "^0.0.4",
		"commit-and-tag-version": "^11.2.1",
		"commitlint": "^17.6.3",
		"depcheck": "^1.4.3",
		"eslint": "^8.40.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"npm-check-updates": "^16.10.12",
		"prettier": "^2.8.8",
		"publint": "^0.1.11",
		"remark": "^14.0.3",
		"remark-cli": "^11.0.0",
		"stylelint": "^15.6.2",
		"svelte-check": "^3.3.2",
		"ts-node": "^10.9.1",
		"turbo": "^1.9.8",
		"typedoc": "^0.24.7",
		"typescript": "^5.0.4",
		"vitest": "^0.31.1"
	}
}
