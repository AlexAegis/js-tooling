{
	"name": "@alexaegis/workspace",
	"description": "base repo for common stuff in my other js projects",
	"version": "0.11.6",
	"license": "mit",
	"private": true,
	"keywords": [
		"eslint",
		"javascript",
		"js",
		"managed-by-autotool",
		"ts",
		"tsconfig",
		"turbo",
		"typescript"
	],
	"author": {
		"email": "alexaegis@pm.me",
		"name": "Alex Aegis",
		"url": "https://github.com/AlexAegis"
	},
	"homepage": "https://github.com/AlexAegis/js-tooling",
	"repository": {
		"url": "git+https://github.com/AlexAegis/js-tooling",
		"type": "git"
	},
	"bugs": {
		"email": "alexaegis@pm.me",
		"url": "https://github.com/AlexAegis/js-tooling/issues"
	},
	"type": "module",
	"config": {
		"engine-strict": true
	},
	"engines": {
		"node": ">=20",
		"pnpm": ">=9"
	},
	"packageManager": "pnpm@9.14.4",
	"workspaces": [
		"apps/*",
		"examples/*",
		"fixtures/*",
		"libs/*",
		"packages/*"
	],
	"scripts": {
		"lint": "turbo run lint_ --concurrency 16",
		"lint:depcheck": "turbo run lint:depcheck_ --concurrency 16",
		"lint:depcheck_": "depcheck",
		"lint:es": "turbo run lint:es_ --concurrency 16",
		"lint:format": "turbo run lint:format_ --concurrency 16",
		"lint:format_": "prettier --cache-location .cache/prettier --plugin prettier-plugin-svelte --plugin prettier-plugin-tailwindcss --ignore-path .config/workspace-only.prettierignore --check .",
		"lint:md": "turbo run lint:md_ --concurrency 16",
		"lint:md_": "remark --frail --no-stdout --silently-ignore --ignore-pattern packages --ignore-pattern libs --ignore-pattern apps .",
		"lint:style": "turbo run lint:style_ --concurrency 16",
		"lint:style:css": "turbo run lint:style:css_ --concurrency 16",
		"lint:style:html": "turbo run lint:style:html_ --concurrency 16",
		"lint:style:scss": "turbo run lint:style:scss_ --concurrency 16",
		"lint:svelte": "turbo run lint:svelte_ --concurrency 16",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 16",
		"publint": "BUILD_REASON='publish' turbo run publint_ --concurrency 16",
		"test": "turbo run test_ --concurrency 16 && merge-workspace-lcov-reports && lcov-viewer lcov -o ./coverage ./coverage/lcov.info",
		"all": "BUILD_REASON='publish' turbo run all_ --concurrency 16",
		"build": "turbo run build-lib_ build-app_ --concurrency 16",
		"build-app": "turbo run build-app_ --concurrency 16",
		"build-lib": "turbo run build-lib_ --concurrency 16",
		"dev": "pnpm run --dir packages/turbowatch build && pnpm run --dir apps/svelte-example-app dev",
		"docs": "vitepress dev ./docs/",
		"docs:build": "vitepress build ./docs/",
		"docs:preview": "vitepress preview ./docs/",
		"format": "turbo run format_ --concurrency 16",
		"format_": "prettier --cache-location .cache/prettier --plugin prettier-plugin-svelte --plugin prettier-plugin-tailwindcss --ignore-path .config/workspace-only.prettierignore --write .",
		"ncu": "ncu --configFilePath ./.config/ && pnpm up",
		"nuke": "nuke",
		"postinstall": "husky install && turbo run build-lib_ --concurrency 16 --filter @alexaegis/eslint-config* --filter @alexaegis/prettier-config* --filter @alexaegis/autotool-plugin-* && autotool",
		"release": "commit-and-tag-version --sign --commit-all",
		"release:major": "commit-and-tag-version --sign --commit-all --release-as major",
		"release:minor": "commit-and-tag-version --sign --commit-all --release-as minor",
		"release:patch": "commit-and-tag-version --sign --commit-all --release-as patch",
		"start": "pnpm run --dir apps/svelte-example-app start",
		"typedoc": "turbo run typedoc_ --concurrency 16",
		"typedoc_": "typedoc"
	},
	"devDependencies": {
		"@alexaegis/autotool-plugin-commitlint": "workspace:^",
		"@alexaegis/autotool-plugin-depcheck": "workspace:^",
		"@alexaegis/autotool-plugin-editorconfig": "workspace:^",
		"@alexaegis/autotool-plugin-eslint": "workspace:^",
		"@alexaegis/autotool-plugin-git": "workspace:^",
		"@alexaegis/autotool-plugin-github": "workspace:^",
		"@alexaegis/autotool-plugin-husky": "workspace:^",
		"@alexaegis/autotool-plugin-ncu": "workspace:^",
		"@alexaegis/autotool-plugin-prettier": "workspace:^",
		"@alexaegis/autotool-plugin-publint": "workspace:^",
		"@alexaegis/autotool-plugin-remark": "workspace:^",
		"@alexaegis/autotool-plugin-standard-version": "workspace:^",
		"@alexaegis/autotool-plugin-stylelint": "workspace:^",
		"@alexaegis/autotool-plugin-svelte": "workspace:^",
		"@alexaegis/autotool-plugin-ts": "workspace:^",
		"@alexaegis/autotool-plugin-turbo": "workspace:^",
		"@alexaegis/autotool-plugin-typedoc": "workspace:^",
		"@alexaegis/autotool-plugin-vite": "workspace:^",
		"@alexaegis/autotool-plugin-vitepress": "workspace:^",
		"@alexaegis/autotool-plugin-vitest": "workspace:^",
		"@alexaegis/autotool-plugin-vscode": "workspace:^",
		"@alexaegis/autotool-plugin-workspace": "workspace:^",
		"@alexaegis/coverage-tools": "^0.10.1",
		"@alexaegis/eslint-config-core": "workspace:^",
		"@alexaegis/nuke": "workspace:^",
		"@alexaegis/stylelint-config": "workspace:^",
		"@alexaegis/ts": "workspace:^",
		"@lcov-viewer/cli": "^1.3.0",
		"@types/eslint": "^9.6.1",
		"@types/node": "^22.10.1",
		"@types/yargs": "^17.0.33",
		"@vitest/coverage-v8": "^2.1.6",
		"autotool": "^0.6.1",
		"commit-and-tag-version": "^12.5.0",
		"commitlint": "^19.6.0",
		"depcheck": "^1.4.7",
		"eslint": "^9.16.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.10",
		"npm-check-updates": "^17.1.11",
		"prettier": "^3.4.1",
		"prettier-plugin-svelte": "^3.3.2",
		"prettier-plugin-tailwindcss": "^0.6.9",
		"publint": "^0.2.12",
		"remark": "^15.0.1",
		"remark-cli": "^12.0.1",
		"stylelint": "^16.11.0",
		"svelte-check": "^4.1.0",
		"ts-node": "^10.9.2",
		"turbo": "^2.3.3",
		"turbo-ignore": "^2.3.3",
		"typedoc": "^0.27.2",
		"typescript": "^5.7.2",
		"vitepress": "1.5.0",
		"vitest": "^2.1.6"
	}
}
