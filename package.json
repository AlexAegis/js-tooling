{
	"name": "@alexaegis/workspace",
	"description": "base repo for common stuff in my other js projects",
	"version": "0.0.0",
	"license": "mit",
	"private": true,
	"author": {
		"email": "alexaegis@gmail.com",
		"name": "Alex Aegis",
		"url": "https://github.com/AlexAegis"
	},
	"homepage": "https://github.com/AlexAegis/js-tooling",
	"repository": {
		"type": "git",
		"url": "https://github.com/AlexAegis/js-tooling"
	},
	"bugs": {
		"email": "alexaegis@gmail.com",
		"url": "https://github.com/AlexAegis/js-tooling/issues"
	},
	"keywords": [
		"eslint",
		"javascript",
		"js",
		"ts",
		"tsconfig",
		"turbo",
		"typescript"
	],
	"type": "module",
	"config": {
		"engine-strict": true
	},
	"engines": {
		"node": ">=18.13.0"
	},
	"packageManager": "pnpm@7.29.0",
	"workspaces": [
		"apps/*",
		"libs/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build-lib_ build-app_",
		"build-lib": "turbo run build-lib_",
		"full-suite": "turbo run full-suite_",
		"lint": "turbo run lint_",
		"lint:es": "turbo run lint:es_ --concurrency 6",
		"lint:es:require_": "turbo run build-lib_ --concurrency 6 --filter @alexaegis/eslint-config-core",
		"lint:format": "turbo run lint:format_ --concurrency 6",
		"lint:format_": "prettier --check *.{json,ts,js,mjs,md,yml,yaml}",
		"lint:md": "turbo run lint:md_ --concurrency 6",
		"lint:md_": "remark --frail --no-stdout *.md docs/**/*.md",
		"lint:md:require_": "turbo run build-lib_ --concurrency 6 --filter @alexaegis/setup-remark",
		"lint:style": "turbo run lint:style_ --concurrency 6",
		"lint:svelte": "turbo run lint:svelte_ --concurrency 6",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6",
		"format": "prettier --write .",
		"ncu": "ncu --deep --peer --upgrade",
		"nuke": "nuke",
		"postinstall": "husky install",
		"release": "commit-and-tag-version --sign",
		"release:major": "commit-and-tag-version --sign --release-as major",
		"release:minor": "commit-and-tag-version --sign --release-as minor",
		"release:patch": "commit-and-tag-version --sign --release-as patch",
		"start": "turbo run start_ --parallel",
		"test": "turbo run test_ --concurrency 6 && merge-workspace-lcov-reports && lcov-viewer lcov -o ./coverage ./coverage/lcov.info",
		"typedoc": "turbo run typedoc_"
	},
	"devDependencies": {
		"@alexaegis/eslint-config-core": "0.0.1",
		"@alexaegis/setup-commitlint": "0.0.1",
		"@alexaegis/setup-editorconfig": "0.0.1",
		"@alexaegis/setup-eslint": "0.0.1",
		"@alexaegis/setup-git": "0.0.1",
		"@alexaegis/setup-github": "0.0.1",
		"@alexaegis/setup-husky": "0.0.1",
		"@alexaegis/setup-prettier": "0.0.1",
		"@alexaegis/setup-remark": "0.0.1",
		"@alexaegis/setup-standard-version": "0.0.1",
		"@alexaegis/setup-stylelint": "0.0.1",
		"@alexaegis/setup-ts": "0.0.1",
		"@alexaegis/setup-turbo": "0.0.1",
		"@alexaegis/setup-vite": "0.0.1",
		"@alexaegis/setup-vitest": "0.0.1",
		"@alexaegis/setup-vscode": "0.0.1",
		"@alexaegis/setup-workspace": "0.0.1",
		"@alexaegis/stylelint-config": "0.0.1",
		"@alexaegis/ts": "0.0.1",
		"@types/eslint": "^8.21.1",
		"@types/node": "^18.14.6",
		"prettier": "^2.8.4",
		"prettier-plugin-svelte": "^2.9.0",
		"remark": "^14.0.2",
		"remark-lint": "^9.1.1",
		"svelte": "^3.55.1",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5",
		"vitest": "^0.29.2"
	}
}
