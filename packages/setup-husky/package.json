{
	"name": "@alexaegis/setup-husky",
	"description": "Husky, lint-staged and commitlint stuff",
	"version": "0.0.5",
	"license": "MIT",
	"private": false,
	"keywords": [
		"@alexaegis/setup-eslint",
		"@alexaegis/setup-prettier",
		"@alexaegis/setup-remark",
		"@alexaegis/setup-ts-node",
		"@alexaegis/setup-vite-lib",
		"@alexaegis/setup-vitest-node",
		"husky"
	],
	"type": "module",
	"config": {
		"engine-strict": false
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "turbo run build-lib_ --concurrency 6 --filter @alexaegis/setup-husky",
		"build-lib_": "vite build",
		"lint:es": "turbo run lint:es_ --concurrency 6 --filter @alexaegis/setup-husky",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 6 --filter @alexaegis/setup-husky",
		"lint:format_": "prettier --check .",
		"lint:md": "turbo run lint:md_ --concurrency 6 --filter @alexaegis/setup-husky",
		"lint:md_": "remark --frail --no-stdout --silently-ignore *.md docs/**/*.md",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6 --filter @alexaegis/setup-husky",
		"lint:tsc_": "tsc --noEmit",
		"format": "prettier --write .",
		"postinstall": "# local install hooks are disabled # autogenerated",
		"test": "turbo run test_ --concurrency 6 --filter @alexaegis/setup-husky",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage --run"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./commit-msg": "./static/.husky/commit-msg",
		"./commitlint.config": "./static/commitlint.config.cjs",
		"./lint-staged.config": "./static/lint-staged.config.mjs",
		"./pre-commit": "./static/.husky/pre-commit",
		"./readme": "./readme.md"
	},
	"bin": {
		"alexaegis-setup-husky-postinstall": "./shims/postinstall.js",
		"setup-husky": "./shims/setup-husky.js"
	},
	"dependencies": {
		"@alexaegis/cli-tools": "0.0.23",
		"@alexaegis/lint-staged-config": "0.0.5",
		"@alexaegis/logging": "0.0.23",
		"@alexaegis/workspace-tools": "0.0.23",
		"@commitlint/config-conventional": "^17.4.4",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.0"
	},
	"peerDependencies": {
		"@alexaegis/setup-commitlint": "0.0.5"
	},
	"devDependencies": {
		"@alexaegis/eslint-config-vitest": "0.0.5",
		"@alexaegis/vite": "0.0.5",
		"@alexaegis/vitest": "0.0.5",
		"@types/node": "^18.15.11",
		"@vitest/coverage-c8": "^0.29.8",
		"typescript": "5.0.3",
		"vite": "4.2.1",
		"vitest": "^0.29.8"
	}
}
