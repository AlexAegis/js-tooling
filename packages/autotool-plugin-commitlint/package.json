{
	"name": "@alexaegis/autotool-plugin-commitlint",
	"description": "My commitlint config provided as an autotool plugin",
	"version": "0.2.0",
	"license": "MIT",
	"private": false,
	"archetype": {
		"platform": "node",
		"framework": "autotool",
		"language": "ts",
		"kind": "lib",
		"bundler": "vite",
		"testing": "vitest"
	},
	"keywords": [
		"@alexaegis/setup-eslint",
		"@alexaegis/setup-publint",
		"@alexaegis/setup-remark",
		"@alexaegis/setup-vite-lib",
		"@alexaegis/setup-vitest-node",
		"autotool-plugin",
		"commitlint",
		"managed-by-autotool"
	],
	"type": "module",
	"config": {
		"engine-strict": false
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "turbo run build-lib_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-commitlint",
		"build-lib_": "vite build",
		"lint:depcheck": "turbo run lint:depcheck_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-commitlint",
		"lint:depcheck_": "depcheck",
		"lint:es": "turbo run lint:es_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-commitlint",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-commitlint",
		"lint:format_": "prettier --check .",
		"lint:md": "turbo run lint:md_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-commitlint",
		"lint:md_": "remark --frail --no-stdout --silently-ignore *.md docs/**/*.md",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-commitlint",
		"lint:tsc_": "tsc --noEmit",
		"publint": "turbo run publint_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-commitlint",
		"publint_": "publint dist",
		"format": "prettier --write .",
		"test": "turbo run test_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-commitlint",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./commitlint.config": "./static/commitlint.config.cjs",
		"./config": {
			"types": "./src/config.ts",
			"import": "./dist/config.js",
			"require": "./dist/config.cjs"
		},
		"./readme": "./readme.md"
	},
	"dependencies": {
		"@alexaegis/commitlint-config": "^0.2.0",
		"autotool-plugin": "^0.0.4",
		"commitlint": "^17.6.3"
	},
	"devDependencies": {
		"@alexaegis/eslint-config-vitest": "^0.2.0",
		"@alexaegis/ts": "^0.2.0",
		"@alexaegis/vite": "^0.2.0",
		"@alexaegis/vitest": "^0.2.0",
		"@types/node": "^20.1.7",
		"@vitest/coverage-c8": "^0.31.0",
		"publint": "^0.1.11",
		"typescript": "^5.0.4",
		"vite": "^4.3.7",
		"vitest": "^0.31.0"
	}
}
