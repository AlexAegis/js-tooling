{
	"name": "@alexaegis/vitest",
	"description": "My vitest config",
	"version": "0.0.1",
	"license": "MIT",
	"private": false,
	"keywords": [
		"@alexaegis/setup-eslint",
		"@alexaegis/setup-prettier",
		"@alexaegis/setup-ts-node",
		"@alexaegis/setup-vite-lib",
		"vitest"
	],
	"type": "module",
	"config": {
		"engine-strict": false
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "turbo run build_ --concurrency 6 --filter @alexaegis/vitest",
		"build_": "vite build",
		"lint:es": "turbo run lint:es_ --concurrency 6 --filter @alexaegis/vitest",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 6 --filter @alexaegis/vitest",
		"lint:format_": "prettier --check .",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6 --filter @alexaegis/vitest",
		"lint:tsc_": "tsc --noEmit",
		"format": "prettier --write .",
		"test": "turbo run test_ --concurrency 6 --filter  @alexaegis/vitest && merge-workspace-lcov-reports && lcov-viewer lcov -o ./coverage ./coverage/lcov.info",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage --run"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./readme": "./readme.md",
		"./vitest-node.config": {
			"types": "./src/vitest-node.config.ts",
			"import": "./dist/vitest-node.config.js",
			"require": "./dist/vitest-node.config.cjs"
		},
		"./vitest-web.config": {
			"types": "./src/vitest-web.config.ts",
			"import": "./dist/vitest-web.config.js",
			"require": "./dist/vitest-web.config.cjs"
		}
	},
	"bin": {
		"vitest": "node_modules/vitest/vitest.mjs"
	},
	"dependencies": {
		"@vitest/coverage-c8": "^0.29.1",
		"@vitest/ui": "^0.29.1",
		"jsdom": "21.1.0",
		"vitest": "^0.29.1"
	},
	"peerDependencies": {
		"vite": "^3.2.4",
		"vitest": "^0.27.1"
	},
	"devDependencies": {
		"@alexaegis/vite": "*",
		"tslib": "^2.5.0"
	}
}
