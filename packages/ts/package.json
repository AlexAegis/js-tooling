{
	"name": "@alexaegis/ts",
	"description": "My typescript configurations",
	"version": "0.2.0",
	"license": "MIT",
	"private": false,
	"archetype": {
		"platform": "node",
		"language": "ts",
		"kind": "lib",
		"bundler": "vite",
		"testing": "vitest",
		"disabledPlugins": [
			"@alexaegis/autolib-plugin-ts"
		]
	},
	"keywords": [
		"managed-by-autotool",
		"tsconfig",
		"typescript"
	],
	"type": "module",
	"config": {
		"engine-strict": false
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "turbo run build-lib_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/ts",
		"build-lib_": "vite build",
		"lint:depcheck": "turbo run lint:depcheck_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/ts",
		"lint:depcheck_": "depcheck",
		"lint:es": "turbo run lint:es_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/ts",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/ts",
		"lint:format_": "prettier --check .",
		"lint:md": "turbo run lint:md_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/ts",
		"lint:md_": "remark --frail --no-stdout --silently-ignore *.md docs/**/*.md",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/ts",
		"lint:tsc_": "tsc --noEmit",
		"publint": "turbo run publint_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/ts",
		"publint_": "publint dist",
		"format": "prettier --write .",
		"test": "turbo run test_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/ts",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./base": "./base.json",
		"./node": "./node.json",
		"./svelte": "./svelte.json",
		"./web": "./web.json"
	},
	"dependencies": {
		"@alexaegis/vite": "^0.2.0",
		"@types/node": "^20.1.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4",
		"vite": "^4.3.7"
	},
	"devDependencies": {
		"@alexaegis/eslint-config-vitest": "^0.2.0",
		"@alexaegis/vite": "^0.2.0",
		"@alexaegis/vitest": "^0.2.0",
		"@vitest/coverage-c8": "^0.31.0",
		"publint": "^0.1.11",
		"vite": "^4.3.7",
		"vite-plugin-dts": "^2.3.0",
		"vitest": "^0.31.0"
	}
}
