{
	"name": "@alexaegis/ts",
	"description": "my typescript configurations",
	"version": "0.0.4",
	"license": "MIT",
	"private": false,
	"keywords": [
		"@alexaegis/setup-eslint",
		"@alexaegis/setup-prettier",
		"@alexaegis/setup-remark",
		"@alexaegis/setup-ts-node",
		"@alexaegis/setup-vite-lib",
		"@alexaegis/setup-vitest-node",
		"tsconfig",
		"typescript"
	],
	"type": "module",
	"config": {
		"engine-strict": false
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "turbo run build-lib_ --concurrency 6 --filter @alexaegis/ts",
		"build-lib_": "vite build",
		"lint:es": "turbo run lint:es_ --concurrency 6 --filter @alexaegis/ts",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 6 --filter @alexaegis/ts",
		"lint:format_": "prettier --check .",
		"lint:md": "turbo run lint:md_ --concurrency 6 --filter @alexaegis/ts",
		"lint:md_": "remark --frail --no-stdout --silently-ignore *.md docs/**/*.md",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6 --filter @alexaegis/ts",
		"lint:tsc_": "tsc --noEmit",
		"format": "prettier --write .",
		"test": "turbo run test_ --concurrency 6 --filter @alexaegis/ts",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage --run"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./base": "./base.json",
		"./node": "./node.json",
		"./svelte": "./svelte.json",
		"./web": "./web.json"
	},
	"dependencies": {
		"@alexaegis/vite": "0.0.4",
		"@tsconfig/svelte": "*",
		"@types/node": "^18.15.11",
		"ts-node": "^10.9.1",
		"typescript": "5.0.3",
		"vite": "^4.2.1"
	},
	"devDependencies": {
		"@alexaegis/vite": "0.0.4",
		"@alexaegis/vitest": "0.0.4",
		"@vitest/coverage-c8": "^0.29.8",
		"vite": "4.2.1",
		"vitest": "^0.29.8"
	}
}
