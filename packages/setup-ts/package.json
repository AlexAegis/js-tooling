{
	"name": "@alexaegis/setup-ts",
	"description": "Exports custom updaters for standard-version",
	"version": "0.2.0",
	"license": "MIT",
	"private": false,
	"keywords": [
		"@alexaegis/setup-depcheck",
		"@alexaegis/setup-eslint",
		"@alexaegis/setup-prettier",
		"@alexaegis/setup-publint",
		"@alexaegis/setup-remark",
		"@alexaegis/setup-ts-node",
		"@alexaegis/setup-vite-lib",
		"@alexaegis/setup-vitest-node",
		"tsconfig",
		"typescript"
	],
	"type": "module",
	"config": {
		"engine-strict": false
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "turbo run build-lib_ --concurrency 32 --cache-dir .cache/turbo --filter @alexaegis/setup-ts",
		"build-lib_": "vite build",
		"lint:depcheck": "turbo run lint:depcheck_ --concurrency 32 --cache-dir .cache/turbo --filter @alexaegis/setup-ts",
		"lint:depcheck_": "depcheck",
		"lint:es": "turbo run lint:es_ --concurrency 32 --cache-dir .cache/turbo --filter @alexaegis/setup-ts",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 32 --cache-dir .cache/turbo --filter @alexaegis/setup-ts",
		"lint:format_": "prettier --check .",
		"lint:md": "turbo run lint:md_ --concurrency 32 --cache-dir .cache/turbo --filter @alexaegis/setup-ts",
		"lint:md_": "remark --frail --no-stdout --silently-ignore *.md docs/**/*.md",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 32 --cache-dir .cache/turbo --filter @alexaegis/setup-ts",
		"lint:tsc_": "tsc --noEmit",
		"publint": "turbo run publint_ --concurrency 32 --cache-dir .cache/turbo --filter @alexaegis/setup-ts",
		"publint_": "publint dist",
		"format": "prettier --write .",
		"postinstall": "# local install hooks are disabled # autogenerated",
		"test": "turbo run test_ --concurrency 32 --cache-dir .cache/turbo --filter @alexaegis/setup-ts",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./package-composing-tsconfig": "./static/package-composing-tsconfig.json",
		"./package-simple-tsconfig": "./static/package-simple-tsconfig.json",
		"./package-source-tsconfig": "./static/package-source-tsconfig.json",
		"./package-spec-vitest-tsconfig": "./static/package-spec-vitest-tsconfig.json",
		"./readme": "./readme.md",
		"./workspace-tsconfig": "./static/workspace-tsconfig.json"
	},
	"bin": {
		"alexaegis-setup-ts-postinstall": "./shims/postinstall.js",
		"setup-ts": "./shims/setup-ts.js"
	},
	"dependencies": {
		"@alexaegis/cli-tools": "^0.1.4",
		"@alexaegis/logging": "^0.1.4",
		"@alexaegis/workspace-tools": "^0.1.4",
		"typescript": "^5.0.4"
	},
	"peerDependencies": {
		"ts-node": "^10.9.1"
	},
	"devDependencies": {
		"@alexaegis/eslint-config-vitest": "^0.2.0",
		"@alexaegis/ts": "^0.2.0",
		"@alexaegis/vite": "^0.2.0",
		"@alexaegis/vitest": "^0.2.0",
		"@types/node": "^18.16.2",
		"@vitest/coverage-c8": "^0.30.1",
		"publint": "^0.1.11",
		"vite": "^4.3.3",
		"vitest": "^0.30.1"
	}
}
