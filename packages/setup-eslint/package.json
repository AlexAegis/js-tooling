{
	"name": "@alexaegis/setup-eslint",
	"description": "Setup eslint",
	"version": "0.0.1",
	"license": "MIT",
	"private": false,
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "turbo run build_ --concurrency 6 --filter @alexaegis/setup-eslint",
		"build_": "vite build",
		"lint:es": "turbo run lint:es_ --concurrency 6 --filter @alexaegis/setup-eslint",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 6 --filter @alexaegis/setup-eslint",
		"lint:format_": "prettier --check .",
		"lint:tsc": "tsc --noEmit",
		"format": "prettier --write .",
		"postinstall": "# local install hooks are disabled # autogenerated"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./readme": "./readme.md",
		"./static/package-eslintrc": "./static/package-eslintrc.cjs",
		"./static/workspace-eslintignore": "./static/workspace-eslintignore",
		"./static/workspace-eslintrc": "./static/workspace-eslintrc.cjs"
	},
	"bin": {
		"alexaegis-setup-eslint-postinstall": "./shims/postinstall.mjs",
		"setup-eslint": "./shims/setup-eslint.mjs"
	},
	"dependencies": {
		"@alexaegis/cli-tools": "0.0.16",
		"@alexaegis/logging": "0.0.16",
		"@alexaegis/workspace-tools": "0.0.16"
	},
	"devDependencies": {
		"@alexaegis/vite": "*",
		"@types/eslint": "^8.21.0",
		"@types/node": "^18.13.0",
		"typescript": "4.9.5"
	}
}
