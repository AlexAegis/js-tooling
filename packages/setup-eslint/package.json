{
	"name": "@alexaegis/setup-eslint",
	"description": "Setup eslint",
	"version": "0.0.2",
	"license": "MIT",
	"private": false,
	"keywords": [
		"@alexaegis/setup-eslint",
		"@alexaegis/setup-prettier",
		"@alexaegis/setup-remark",
		"@alexaegis/setup-ts-node",
		"@alexaegis/setup-vite-lib",
		"@alexaegis/setup-vitest-node",
		"eslint"
	],
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "turbo run build-lib_ --concurrency 6 --filter @alexaegis/setup-eslint",
		"build-lib_": "vite build",
		"lint:es": "turbo run lint:es_ --concurrency 6 --filter @alexaegis/setup-eslint",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 6 --filter @alexaegis/setup-eslint",
		"lint:format_": "prettier --check .",
		"lint:md": "turbo run lint:md_ --concurrency 6 --filter @alexaegis/setup-eslint",
		"lint:md_": "remark --frail --no-stdout --silently-ignore *.md docs/**/*.md",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6 --filter @alexaegis/setup-eslint",
		"lint:tsc_": "tsc --noEmit",
		"format": "prettier --write .",
		"postinstall": "# local install hooks are disabled # autogenerated",
		"test": "turbo run test_ --concurrency 6 --filter @alexaegis/setup-eslint",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage --run"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./eslintignore": "./static/eslintignore.txt",
		"./package-eslintrc": "./static/package-eslintrc.cjs",
		"./readme": "./readme.md",
		"./workspace-eslintrc": "./static/workspace-eslintrc.cjs"
	},
	"bin": {
		"alexaegis-setup-eslint-postinstall": "./shims/postinstall.js",
		"setup-eslint": "./shims/setup-eslint.js"
	},
	"dependencies": {
		"@alexaegis/cli-tools": "0.0.23",
		"@alexaegis/logging": "0.0.23",
		"@alexaegis/workspace-tools": "0.0.23"
	},
	"devDependencies": {
		"@alexaegis/vite": "0.0.2",
		"@alexaegis/vitest": "0.0.2",
		"@types/eslint": "^8.21.1",
		"@types/node": "^18.15.0",
		"typescript": "4.9.5"
	}
}
