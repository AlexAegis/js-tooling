{
	"name": "@alexaegis/setup-vitest",
	"description": "Setup vitest",
	"version": "0.0.1",
	"license": "MIT",
	"private": false,
	"keywords": [
		"@alexaegis/setup-eslint",
		"@alexaegis/setup-prettier",
		"@alexaegis/setup-ts-node",
		"@alexaegis/setup-vite",
		"vitest"
	],
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "turbo run build_ --concurrency 6 --filter @alexaegis/setup-vitest",
		"build_": "vite build",
		"lint:es": "turbo run lint:es_ --concurrency 6 --filter @alexaegis/setup-vitest",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 6 --filter @alexaegis/setup-vitest",
		"lint:format_": "prettier --check .",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6 --filter @alexaegis/setup-vitest",
		"lint:tsc_": "tsc --noEmit",
		"format": "prettier --write .",
		"postinstall": "# local install hooks are disabled # autogenerated",
		"test": "turbo run test_ --concurrency 6 --filter  @alexaegis/setup-vitest && merge-workspace-lcov-reports && lcov-viewer lcov -o ./coverage ./coverage/lcov.info",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage --run"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./package-node-vitest.config": "./static/package-node-vitest.config.ts",
		"./package-web-vitest.config": "./static/package-web-vitest.config.ts",
		"./readme": "./readme.md",
		"./workspace-vitest.config": "./static/workspace-vitest.config.ts"
	},
	"bin": {
		"alexaegis-setup-vitest-postinstall": "./shims/postinstall.mjs",
		"lcov-viewer": "node_modules/@lcov-viewer/cli/lib/index.js",
		"merge-workspace-lcov-reports": "node_modules/@alexaegis/coverage-tools/bin/merge-workspace-lcov-reports.mjs",
		"setup-vitest": "./shims/setup-vitest.mjs"
	},
	"dependencies": {
		"@alexaegis/cli-tools": "0.0.17",
		"@alexaegis/coverage-tools": "0.0.17",
		"@alexaegis/logging": "0.0.17",
		"@alexaegis/workspace-tools": "0.0.17",
		"@lcov-viewer/cli": "^1.3.0"
	},
	"devDependencies": {
		"@alexaegis/vite": "*",
		"@alexaegis/vitest": "*",
		"@types/node": "^18.14.0",
		"typescript": "4.9.5"
	}
}
