{
	"name": "@alexaegis/setup-vitest",
	"description": "Setup vitest",
	"version": "0.1.4",
	"license": "MIT",
	"private": false,
	"keywords": [
		"@alexaegis/setup-depcheck",
		"@alexaegis/setup-eslint",
		"@alexaegis/setup-prettier",
		"@alexaegis/setup-remark",
		"@alexaegis/setup-ts-node",
		"@alexaegis/setup-vite-lib",
		"vitest"
	],
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "turbo run build-lib_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/setup-vitest",
		"build-lib_": "vite build",
		"lint:depcheck": "turbo run lint:depcheck_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/setup-vitest",
		"lint:depcheck_": "depcheck",
		"lint:es": "turbo run lint:es_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/setup-vitest",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/setup-vitest",
		"lint:format_": "prettier --check .",
		"lint:md": "turbo run lint:md_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/setup-vitest",
		"lint:md_": "remark --frail --no-stdout --silently-ignore *.md docs/**/*.md",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/setup-vitest",
		"lint:tsc_": "tsc --noEmit",
		"format": "prettier --write .",
		"postinstall": "# local install hooks are disabled # autogenerated",
		"test": "turbo run test_ --concurrency 6 --cache-dir .cache/turbo --filter  @alexaegis/setup-vitest && merge-workspace-lcov-reports && lcov-viewer lcov -o ./coverage ./coverage/lcov.info",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage --run"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./package-node-vitest.config": "./static/package-node-vitest.config.ts",
		"./package-web-vitest.config": "./static/package-web-vitest.config.ts",
		"./readme": "./readme.md",
		"./workspace-vitest.config": "./static/workspace-vitest.config.ts"
	},
	"bin": {
		"alexaegis-setup-vitest-postinstall": "./shims/postinstall.js",
		"setup-vitest": "./shims/setup-vitest.js"
	},
	"dependencies": {
		"@alexaegis/cli-tools": "^0.1.3",
		"@alexaegis/coverage-tools": "^0.1.3",
		"@alexaegis/logging": "^0.1.3",
		"@alexaegis/workspace-tools": "^0.1.3",
		"@lcov-viewer/cli": "^1.3.0"
	},
	"devDependencies": {
		"@alexaegis/eslint-config-vitest": "^0.1.4",
		"@alexaegis/ts": "^0.1.4",
		"@alexaegis/vite": "^0.1.4",
		"@alexaegis/vitest": "^0.1.4",
		"@types/node": "^18.15.11",
		"@vitest/coverage-c8": "^0.30.1",
		"typescript": "^5.0.4",
		"vite": "^4.2.1",
		"vitest": "^0.30.1"
	}
}
