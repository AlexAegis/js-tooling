{
	"name": "@alexaegis/setup-vite",
	"description": "Setup vite",
	"version": "0.0.1",
	"license": "MIT",
	"private": false,
	"keywords": [
		"@alexaegis/setup-eslint",
		"@alexaegis/setup-prettier",
		"@alexaegis/setup-remark",
		"@alexaegis/setup-ts-node",
		"@alexaegis/setup-vite-lib",
		"@alexaegis/setup-vitest-node",
		"vite"
	],
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "turbo run build-lib_ --concurrency 6 --filter @alexaegis/setup-vite",
		"build-lib_": "vite build",
		"lint:es": "turbo run lint:es_ --concurrency 6 --filter @alexaegis/setup-vite",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 6 --filter @alexaegis/setup-vite",
		"lint:format_": "prettier --check .",
		"lint:md": "turbo run lint:md_ --concurrency 6 --filter @alexaegis/setup-vite",
		"lint:md_": "remark --frail --no-stdout --silently-ignore *.md docs/**/*.md",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6 --filter @alexaegis/setup-vite",
		"lint:tsc_": "tsc --noEmit",
		"format": "prettier --write .",
		"postinstall": "# local install hooks are disabled # autogenerated",
		"test": "turbo run test_ --concurrency 6 --filter @alexaegis/setup-vite",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage --run"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./nodemon": "./static/nodemon.json",
		"./readme": "./readme.md",
		"./vite-lib.config": "./static/vite-lib.config.ts",
		"./vite-svelte.config": "./static/vite-svelte.config.ts"
	},
	"bin": {
		"alexaegis-setup-vite-postinstall": "./shims/postinstall.mjs",
		"concurrently": "node_modules/concurrently/index.js",
		"nodemon": "node_modules/nodemon/bin/nodemon.js",
		"setup-vite": "./shims/setup-vite.mjs"
	},
	"dependencies": {
		"@alexaegis/cli-tools": "0.0.23",
		"@alexaegis/logging": "0.0.23",
		"@alexaegis/workspace-tools": "0.0.23",
		"concurrently": "^7.6.0",
		"nodemon": "^2.0.21"
	},
	"devDependencies": {
		"@alexaegis/vite": "0.0.1",
		"@alexaegis/vitest": "0.0.1",
		"@types/node": "^18.14.6",
		"typescript": "4.9.5"
	}
}
