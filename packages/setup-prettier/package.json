{
	"name": "@alexaegis/setup-prettier",
	"description": "My prettier config distributor",
	"version": "0.0.1",
	"license": "MIT",
	"private": false,
	"keywords": [
		"@alexaegis/setup-eslint",
		"@alexaegis/setup-prettier",
		"@alexaegis/setup-remark",
		"@alexaegis/setup-ts-node",
		"@alexaegis/setup-vite-lib",
		"@alexaegis/setup-vitest-node",
		"prettier"
	],
	"type": "module",
	"config": {
		"engine-strict": false
	},
	"publishConfig": {
		"access": "public"
	},
	"directories": {},
	"scripts": {
		"build": "turbo run build-lib_ --concurrency 6 --filter @alexaegis/setup-prettier",
		"build-lib_": "vite build",
		"lint:es": "turbo run lint:es_ --concurrency 6 --filter @alexaegis/setup-prettier",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 6 --filter @alexaegis/setup-prettier",
		"lint:format_": "prettier --check .",
		"lint:md": "turbo run lint:md_ --concurrency 6 --filter @alexaegis/setup-prettier",
		"lint:md_": "remark --frail --no-stdout *.md docs/**/*.md",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6 --filter @alexaegis/setup-prettier",
		"lint:tsc_": "tsc --noEmit",
		"format": "prettier --write .",
		"postinstall": "# local install hooks are disabled # autogenerated",
		"test": "turbo run test_ --concurrency 6 --filter @alexaegis/setup-prettier",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage --run"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./.prettierignore": "./static/.prettierignore",
		"./.prettierrc.cjs": "./static/.prettierrc.cjs.txt",
		"./prettier-config": {
			"types": "./src/prettier-config.ts",
			"import": "./dist/prettier-config.js",
			"require": "./dist/prettier-config.cjs"
		},
		"./readme": "./readme.md"
	},
	"bin": {
		"alexaegis-setup-prettier-postinstall": "./shims/postinstall.mjs",
		"prettier": "node_modules/prettier/bin-prettier.js",
		"setup-prettier": "./shims/setup-prettier.mjs"
	},
	"dependencies": {
		"@alexaegis/cli-tools": "0.0.22",
		"@alexaegis/logging": "0.0.22",
		"@alexaegis/prettier-config": "*",
		"@alexaegis/workspace-tools": "0.0.22",
		"prettier": "^2.8.4",
		"yargs": "^17.7.1"
	},
	"optionalDependencies": {
		"svelte": "^3.55.1"
	},
	"devDependencies": {
		"@alexaegis/ts": "*",
		"@alexaegis/vite": "*",
		"@alexaegis/vitest": "*",
		"@types/node": "^18.14.6",
		"@types/yargs": "17.0.22",
		"typescript": "4.9.5"
	}
}
