{
	"$schema": "https://json.schemastore.org/tsconfig?mark=managed-by-autotool",
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"composite": true,
		"types": ["node", "vitest/globals"]
	},
	"include": ["**/*.spec.ts"],
	"exclude": [
		"node_modules",
		"dist",
		"coverage",
		"typedoc",
		".turbo",
		".cache",
		"vite*.config.ts.timestamp-*"
	]
}
