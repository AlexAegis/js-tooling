{
	"name": "@alexaegis/setup-remark",
	"description": "My markdown linting config",
	"version": "0.0.1",
	"license": "MIT",
	"private": false,
	"keywords": [
		"@alexaegis/setup-eslint",
		"@alexaegis/setup-prettier",
		"@alexaegis/setup-remark",
		"@alexaegis/setup-ts-node",
		"@alexaegis/setup-vite-lib",
		"@alexaegis/setup-vitest-node",
		"markdown"
	],
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "turbo run build-lib_ --concurrency 6 --filter @alexaegis/setup-remark",
		"build-lib_": "vite build",
		"lint:es": "turbo run lint:es_ --concurrency 6 --filter @alexaegis/setup-remark",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 6 --filter @alexaegis/setup-remark",
		"lint:format_": "prettier --check .",
		"lint:md": "turbo run lint:md_ --concurrency 6 --filter @alexaegis/setup-remark",
		"lint:md_": "remark --frail --no-stdout --silently-ignore *.md docs/**/*.md",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6 --filter @alexaegis/setup-remark",
		"lint:tsc_": "tsc --noEmit",
		"format": "prettier --write .",
		"postinstall": "# local install hooks are disabled # autogenerated",
		"test": "turbo run test_ --concurrency 6 --filter @alexaegis/setup-remark",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage --run"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./dot-remarkignore": "./static/dot-remarkignore",
		"./dot-remarkrc": "./static/dot-remarkrc.js",
		"./readme": "./readme.md",
		"./remark-preset": {
			"types": "./src/remark-preset.ts",
			"import": "./dist/remark-preset.js",
			"require": "./dist/remark-preset.cjs"
		}
	},
	"bin": {
		"alexaegis-setup-remark-postinstall": "./shims/postinstall.mjs",
		"markdownlint": "node_modules/markdownlint-cli/markdownlint.js",
		"remark": "node_modules/remark-cli/cli.js",
		"setup-remark": "./shims/setup-remark.mjs"
	},
	"dependencies": {
		"@alexaegis/cli-tools": "0.0.23",
		"@alexaegis/logging": "0.0.23",
		"@alexaegis/remark-preset": "0.0.1",
		"@alexaegis/workspace-tools": "0.0.23",
		"markdownlint-cli": "^0.33.0",
		"remark-cli": "^11.0.0",
		"yargs": "^17.7.1"
	},
	"devDependencies": {
		"@alexaegis/vite": "0.0.1",
		"@alexaegis/vitest": "0.0.1",
		"@types/yargs": "17.0.22"
	}
}
