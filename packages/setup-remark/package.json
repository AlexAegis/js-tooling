{
	"name": "@alexaegis/setup-remark",
	"description": "My markdown linting config",
	"version": "0.0.1",
	"license": "MIT",
	"private": false,
	"keywords": [
		"@alexaegis/setup-eslint",
		"@alexaegis/setup-prettier",
		"@alexaegis/setup-ts-node",
		"@alexaegis/setup-vite-lib",
		"@alexaegis/setup-vitest-node",
		"markdown"
	],
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "turbo run build_ --concurrency 6 --filter @alexaegis/setup-remark",
		"build_": "vite build",
		"lint:es": "turbo run lint:es_ --concurrency 6 --filter @alexaegis/setup-remark",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 6 --filter @alexaegis/setup-remark",
		"lint:format_": "prettier --check .",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6 --filter @alexaegis/setup-remark",
		"lint:tsc_": "tsc --noEmit",
		"format": "prettier --write .",
		"test": "turbo run test_ --concurrency 6 --filter @alexaegis/setup-remark",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage --run"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./.remarkrc": "./static/.remarkrc.js",
		"./readme": "./readme.md",
		"./remark-preset": {
			"types": "./src/remark-preset.ts",
			"import": "./dist/remark-preset.js",
			"require": "./dist/remark-preset.cjs"
		}
	},
	"bin": {
		"markdownlint": "node_modules/markdownlint-cli/markdownlint.js",
		"remark": "node_modules/remark-cli/cli.js"
	},
	"dependencies": {
		"@alexaegis/cli-tools": "0.0.21",
		"@alexaegis/logging": "0.0.21",
		"@alexaegis/remark-preset": "*",
		"@alexaegis/workspace-tools": "0.0.21",
		"markdownlint-cli": "^0.33.0",
		"remark-cli": "^11.0.0"
	},
	"devDependencies": {
		"@alexaegis/vite": "*",
		"@alexaegis/vitest": "*"
	}
}
