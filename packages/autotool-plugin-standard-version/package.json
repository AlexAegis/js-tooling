{
	"name": "@alexaegis/autotool-plugin-standard-version",
	"description": "Exports custom updaters for standard-version",
	"version": "0.9.1",
	"license": "MIT",
	"private": false,
	"archetype": {
		"platform": "node",
		"framework": "autotool",
		"language": "ts",
		"kind": "lib"
	},
	"keywords": [
		"autotool-plugin",
		"managed-by-autotool",
		"standard-version"
	],
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"lint:depcheck": "turbo run lint:depcheck_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-standard-version",
		"lint:depcheck_": "depcheck",
		"lint:es": "turbo run lint:es_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-standard-version",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-standard-version",
		"lint:format_": "prettier --cache-location .cache/prettier --plugin prettier-plugin-svelte --plugin prettier-plugin-tailwindcss --check .",
		"lint:md": "turbo run lint:md_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-standard-version",
		"lint:md_": "remark --frail --no-stdout --silently-ignore .",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-standard-version",
		"lint:tsc_": "tsc --noEmit",
		"publint": "BUILD_REASON='publish' turbo run publint_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-standard-version",
		"publint_": "publint dist",
		"test": "turbo run test_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-standard-version",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage",
		"all": "BUILD_REASON='publish' turbo run all_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-standard-version",
		"build": "turbo run build-lib_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-standard-version",
		"build-lib_": "vite build",
		"format": "turbo run format_ --concurrency 16 --cache-dir .cache/turbo --filter @alexaegis/autotool-plugin-standard-version",
		"format_": "prettier --cache-location .cache/prettier --plugin prettier-plugin-svelte --plugin prettier-plugin-tailwindcss --write ."
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs",
			"default": "./dist/index.js"
		},
		"./config": {
			"types": "./src/config.ts",
			"import": "./dist/config.js",
			"require": "./dist/config.cjs",
			"default": "./dist/config.js"
		},
		"./readme": "./readme.md",
		"./versionrc.cjs": "./static/versionrc.cjs.txt"
	},
	"dependencies": {
		"@alexaegis/logging": "^0.8.0",
		"@alexaegis/standard-version": "^0.9.1",
		"autotool-plugin": "^0.3.0",
		"commit-and-tag-version": "^12.0.0"
	},
	"devDependencies": {
		"@alexaegis/eslint-config-vitest": "^0.9.1",
		"@alexaegis/ts": "^0.9.1",
		"@alexaegis/vite": "^0.9.1",
		"@alexaegis/vitest": "^0.9.1",
		"@types/node": "^20.10.1",
		"publint": "^0.2.5",
		"typescript": "^5.3.2",
		"vite": "^5.0.4",
		"vitest": "^0.34.6"
	}
}
