{
	"name": "@alexaegis/nuke",
	"description": "Nuke stuff",
	"version": "0.0.1",
	"license": "MIT",
	"private": false,
	"author": {
		"email": "alexaegis@gmail.com",
		"name": "AlexAegis",
		"url": "https://www.github.com/AlexAegis"
	},
	"repository": "github:AlexAegis/js",
	"bugs": {
		"url": "https://www.github.com/AlexAegis/js/issues"
	},
	"keywords": [
		"@alexaegis/setup-eslint",
		"@alexaegis/setup-prettier",
		"@alexaegis/setup-ts-node",
		"@alexaegis/setup-vite",
		"@alexaegis/setup-vitest-node",
		"clean",
		"nuke"
	],
	"type": "module",
	"config": {
		"engine-strict": false
	},
	"publishConfig": {
		"access": "public"
	},
	"directories": {},
	"scripts": {
		"build": "turbo run build_ --concurrency 6 --filter @alexaegis/nuke",
		"build_": "vite build",
		"lint:es": "turbo run lint:es_ --concurrency 6 --filter @alexaegis/nuke",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 6 --filter @alexaegis/nuke",
		"lint:format_": "prettier --check .",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6 --filter @alexaegis/nuke",
		"lint:tsc_": "tsc --noEmit",
		"format": "prettier --write .",
		"test": "turbo run test_ --concurrency 6 --filter @alexaegis/nuke",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage --run"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./readme": "./readme.md"
	},
	"bin": {
		"nuke": "./shims/nuke.mjs"
	},
	"dependencies": {
		"@alexaegis/cli-tools": "0.0.19",
		"@alexaegis/common": "0.0.19",
		"@alexaegis/fs": "0.0.19",
		"@alexaegis/logging": "0.0.19",
		"@alexaegis/workspace-tools": "0.0.19",
		"globby": "^13.1.3",
		"kolorist": "^1.7.0",
		"yargs": "^17.7.1"
	},
	"devDependencies": {
		"@alexaegis/vite": "*",
		"@alexaegis/vitest": "*",
		"@types/node": "^18.14.1",
		"@types/yargs": "17.0.22",
		"typescript": "^4.9.5"
	}
}
