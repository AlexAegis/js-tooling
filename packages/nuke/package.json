{
	"name": "@alexaegis/nuke",
	"description": "Nuke stuff",
	"version": "0.0.5",
	"license": "MIT",
	"private": false,
	"keywords": [
		"@alexaegis/setup-depcheck",
		"@alexaegis/setup-eslint",
		"@alexaegis/setup-prettier",
		"@alexaegis/setup-remark",
		"@alexaegis/setup-ts-node",
		"@alexaegis/setup-vite-lib",
		"@alexaegis/setup-vitest-node",
		"clean",
		"nuke"
	],
	"type": "module",
	"config": {
		"engine-strict": false
	},
	"publishConfig": {
		"access": "public"
	},
	"directories": {},
	"scripts": {
		"build": "turbo run build-lib_ --concurrency 6 --filter @alexaegis/nuke",
		"build-lib_": "vite build",
		"lint:depcheck": "turbo run lint:depcheck_ --concurrency 6 --filter @alexaegis/nuke",
		"lint:depcheck_": "depcheck",
		"lint:es": "turbo run lint:es_ --concurrency 6 --filter @alexaegis/nuke",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 6 --filter @alexaegis/nuke",
		"lint:format_": "prettier --check .",
		"lint:md": "turbo run lint:md_ --concurrency 6 --filter @alexaegis/nuke",
		"lint:md_": "remark --frail --no-stdout --silently-ignore *.md docs/**/*.md",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6 --filter @alexaegis/nuke",
		"lint:tsc_": "tsc --noEmit",
		"format": "prettier --write .",
		"test": "turbo run test_ --concurrency 6 --filter @alexaegis/nuke",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage --run"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./readme": "./readme.md"
	},
	"bin": {
		"nuke": "./shims/nuke.js"
	},
	"dependencies": {
		"@alexaegis/cli-tools": "0.0.23",
		"@alexaegis/common": "0.0.23",
		"@alexaegis/fs": "0.0.23",
		"@alexaegis/logging": "0.0.23",
		"@alexaegis/workspace-tools": "0.0.23",
		"globby": "^13.1.3",
		"kolorist": "^1.7.0",
		"yargs": "^17.7.1"
	},
	"devDependencies": {
		"@alexaegis/eslint-config-vitest": "0.0.5",
		"@alexaegis/vite": "0.0.5",
		"@alexaegis/vitest": "0.0.5",
		"@types/node": "^18.15.11",
		"@types/yargs": "17.0.24",
		"@vitest/coverage-c8": "^0.29.8",
		"typescript": "^5.0.4",
		"vite": "4.2.1",
		"vitest": "^0.29.8"
	}
}
