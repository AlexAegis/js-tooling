{
	"name": "@alexaegis/setup-workspace",
	"description": "This package contains generic workspace tools and scripts",
	"version": "0.2.0",
	"license": "MIT",
	"private": false,
	"keywords": [
		"@alexaegis/setup-depcheck",
		"@alexaegis/setup-eslint",
		"@alexaegis/setup-prettier",
		"@alexaegis/setup-publint",
		"@alexaegis/setup-remark",
		"@alexaegis/setup-ts-node",
		"@alexaegis/setup-vite-lib",
		"@alexaegis/setup-vitest-node",
		"git"
	],
	"type": "module",
	"config": {
		"engine-strict": false
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "turbo run build-lib_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/setup-workspace",
		"build-lib_": "vite build",
		"lint:depcheck": "turbo run lint:depcheck_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/setup-workspace",
		"lint:depcheck_": "depcheck",
		"lint:es": "turbo run lint:es_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/setup-workspace",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/setup-workspace",
		"lint:format_": "prettier --check .",
		"lint:md": "turbo run lint:md_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/setup-workspace",
		"lint:md_": "remark --frail --no-stdout --silently-ignore *.md docs/**/*.md",
		"lint:publint": "turbo run lint:publint_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/setup-workspace",
		"lint:publint_": "publint",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/setup-workspace",
		"lint:tsc_": "tsc --noEmit",
		"format": "prettier --write .",
		"postinstall": "# local install hooks are disabled # autogenerated",
		"test": "turbo run test_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/setup-workspace",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./pnpm-workspace": "./static/pnpm-workspace.yaml"
	},
	"bin": {
		"alexaegis-setup-workspace-postinstall": "./shims/postinstall.js",
		"setup-workspace": "./shims/setup-workspace.js"
	},
	"dependencies": {
		"@alexaegis/cli-tools": "^0.1.4",
		"@alexaegis/logging": "^0.1.4",
		"@alexaegis/setup-editorconfig": "^0.2.0",
		"@alexaegis/workspace-tools": "^0.1.4",
		"npm-check-updates": "^16.10.9"
	},
	"devDependencies": {
		"@alexaegis/eslint-config-vitest": "^0.2.0",
		"@alexaegis/nuke": "^0.2.0",
		"@alexaegis/ts": "^0.2.0",
		"@alexaegis/vite": "^0.2.0",
		"@alexaegis/vitest": "^0.2.0",
		"@types/node": "^18.16.0",
		"@vitest/coverage-c8": "^0.30.1",
		"publint": "^0.1.11",
		"typescript": "^5.0.4",
		"vite": "^4.3.1",
		"vitest": "^0.30.1"
	}
}
