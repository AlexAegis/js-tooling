{
	"name": "@alexaegis/setup-stylelint",
	"description": "My stylelint config",
	"version": "0.0.3",
	"license": "MIT",
	"private": false,
	"keywords": [
		"@alexaegis/setup-eslint",
		"@alexaegis/setup-prettier",
		"@alexaegis/setup-remark",
		"@alexaegis/setup-ts-node",
		"@alexaegis/setup-vite-lib",
		"@alexaegis/setup-vitest-node",
		"stylelint"
	],
	"type": "module",
	"config": {
		"engine-strict": false
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "turbo run build-lib_ --concurrency 6 --filter @alexaegis/setup-stylelint",
		"build-lib_": "vite build",
		"lint:es": "turbo run lint:es_ --concurrency 6 --filter @alexaegis/setup-stylelint",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 6 --filter @alexaegis/setup-stylelint",
		"lint:format_": "prettier --check .",
		"lint:md": "turbo run lint:md_ --concurrency 6 --filter @alexaegis/setup-stylelint",
		"lint:md_": "remark --frail --no-stdout --silently-ignore *.md docs/**/*.md",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6 --filter @alexaegis/setup-stylelint",
		"lint:tsc_": "tsc --noEmit",
		"format": "prettier --write .",
		"postinstall": "# local install hooks are disabled # autogenerated",
		"test": "turbo run test_ --concurrency 6 --filter @alexaegis/setup-stylelint",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage --run"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./dot-stylelintrc": "./static/dot-stylelintrc.cjs",
		"./readme": "./readme.md"
	},
	"bin": {
		"alexaegis-setup-stylelint-postinstall": "./shims/postinstall.js",
		"setup-stylelint": "./shims/setup-stylelint.js"
	},
	"dependencies": {
		"@alexaegis/cli-tools": "0.0.23",
		"@alexaegis/logging": "0.0.23",
		"@alexaegis/workspace-tools": "0.0.23",
		"stylelint": "15.4.0"
	},
	"devDependencies": {
		"@alexaegis/vite": "0.0.3",
		"@alexaegis/vitest": "0.0.3",
		"@types/node": "^18.15.11",
		"@vitest/coverage-c8": "^0.29.8",
		"typescript": "5.0.3",
		"vite": "4.2.1",
		"vitest": "^0.29.8"
	}
}
