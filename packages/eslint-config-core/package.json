{
	"name": "@alexaegis/eslint-config-core",
	"description": "ESLint setup",
	"version": "0.0.1",
	"license": "MIT",
	"private": false,
	"keywords": [
		"@alexaegis/setup-eslint",
		"@alexaegis/setup-prettier",
		"@alexaegis/setup-remark",
		"@alexaegis/setup-ts-node",
		"@alexaegis/setup-vite-lib",
		"@alexaegis/setup-vitest-node",
		"eslint"
	],
	"type": "module",
	"config": {
		"engine-strict": true
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "turbo run build-lib_ --concurrency 6 --filter @alexaegis/eslint-config-core",
		"build-lib_": "vite build",
		"lint:es": "turbo run lint:es_ --concurrency 6 --filter @alexaegis/eslint-config-core",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 6 --filter @alexaegis/eslint-config-core",
		"lint:format_": "prettier --check .",
		"lint:md": "turbo run lint:md_ --concurrency 6 --filter @alexaegis/eslint-config-core",
		"lint:md_": "remark --frail --no-stdout *.md docs/**/*.md",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6 --filter @alexaegis/eslint-config-core",
		"lint:tsc_": "tsc --noEmit",
		"format": "prettier --write .",
		"test": "turbo run test_ --concurrency 6 --filter @alexaegis/eslint-config-core",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage --run"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./readme": "./readme.md"
	},
	"bin": {
		"eslint": "node_modules/eslint/bin/eslint.js"
	},
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "^5.54.1",
		"@typescript-eslint/parser": "^5.54.1",
		"eslint": "^8.35.0",
		"eslint-config-next": "^13.2.3",
		"eslint-config-prettier": "^8.7.0",
		"eslint-config-turbo": "^0.0.9",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-svelte3": "^4.0.0",
		"eslint-plugin-unicorn": "^46.0.0",
		"typescript": "^4.9.5"
	},
	"peerDependencies": {
		"typescript": "^4.9.5"
	},
	"optionalDependencies": {
		"svelte": "^3.55.1"
	},
	"devDependencies": {
		"@alexaegis/vite": "*",
		"@alexaegis/vitest": "*",
		"@types/eslint": "^8.21.1",
		"@types/node": "^18.14.6"
	}
}
