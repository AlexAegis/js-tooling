{
	"name": "@alexaegis/eslint-config-core",
	"description": "ESLint setup",
	"version": "0.2.0",
	"license": "MIT",
	"private": false,
	"keywords": [
		"@alexaegis/setup-depcheck",
		"@alexaegis/setup-eslint",
		"@alexaegis/setup-prettier",
		"@alexaegis/setup-publint",
		"@alexaegis/setup-remark",
		"@alexaegis/setup-ts-node",
		"@alexaegis/setup-vite-lib",
		"@alexaegis/setup-vitest-node",
		"eslint"
	],
	"type": "module",
	"config": {
		"engine-strict": true
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "turbo run build-lib_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/eslint-config-core",
		"build-lib_": "vite build",
		"lint:depcheck": "turbo run lint:depcheck_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/eslint-config-core",
		"lint:depcheck_": "depcheck",
		"lint:es": "turbo run lint:es_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/eslint-config-core",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/eslint-config-core",
		"lint:format_": "prettier --check .",
		"lint:md": "turbo run lint:md_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/eslint-config-core",
		"lint:md_": "remark --frail --no-stdout --silently-ignore *.md docs/**/*.md",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/eslint-config-core",
		"lint:tsc_": "tsc --noEmit",
		"format": "prettier --write .",
		"test": "turbo run test_ --concurrency 6 --cache-dir .cache/turbo --filter @alexaegis/eslint-config-core",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./readme": "./readme.md"
	},
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "^5.59.0",
		"@typescript-eslint/parser": "^5.59.0",
		"eslint": "^8.39.0",
		"eslint-config-next": "^13.3.1",
		"eslint-config-prettier": "^8.8.0",
		"eslint-config-turbo": "^1.9.3",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-svelte3": "^4.0.0",
		"eslint-plugin-unicorn": "^46.0.0",
		"typescript": "^5.0.4"
	},
	"peerDependencies": {
		"typescript": "^5.0.4"
	},
	"optionalDependencies": {
		"svelte": "^3.58.0"
	},
	"devDependencies": {
		"@alexaegis/eslint-config-vitest": "^0.2.0",
		"@alexaegis/ts": "^0.2.0",
		"@alexaegis/vite": "^0.2.0",
		"@alexaegis/vitest": "^0.2.0",
		"@types/eslint": "^8.37.0",
		"@types/node": "^18.16.0",
		"@vitest/coverage-c8": "^0.30.1",
		"vite": "^4.3.1",
		"vitest": "^0.30.1"
	}
}
